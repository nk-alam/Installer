<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.APKInstaller" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/accent_blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/primary_green_dark</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        
        <!-- Material 3 color tokens -->
        <item name="colorPrimaryContainer">@color/primary_green_light</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondaryContainer">@color/accent_blue_light</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.APKInstaller.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.APKInstaller.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.APKInstaller.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.APKInstaller.Body2</item>
    </style>

    <style name="Theme.APKInstaller.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Card Styles -->
    <style name="AppCardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>
    
    <!-- Button Styles -->
    <style name="InstallButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/primary_green_light</item>
    </style>
    
    <style name="OpenButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_green</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/primary_green_light</item>
    </style>
    
    <style name="CancelButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Typography Styles -->
    <style name="TextAppearance.APKInstaller.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    
    <style name="TextAppearance.APKInstaller.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.APKInstaller.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.APKInstaller.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Progress Indicator Styles -->
    <style name="ProgressIndicatorStyle" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/primary_green</item>
        <item name="trackColor">@color/divider</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="android:radius">4dp</item>
    </style>
    
    <!-- Toolbar Styles -->
    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary_green</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <!-- FAB Styles -->
    <style name="FabStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_blue</item>
        <item name="tint">@color/white</item>
        <item name="android:layout_margin">16dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>
</resources>